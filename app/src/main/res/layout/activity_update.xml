<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Create">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UPDATE MATCH"
                android:gravity="center_horizontal"
                android:textSize="25dp"
                android:layout_marginTop="30dp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="30dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="50dp"
                    android:gravity="center">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/insertclubname1"
                        android:hint="Club 1 Name"
                        android:textColorHint="@color/black"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:gravity="center"/>
                    <ImageView
                        android:id="@+id/insertlogo1"
                        android:layout_width="300px"
                        android:layout_height="300px"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ic_launcher_background"/>
                    <Button
                        android:id="@+id/insertbtnchooseimage1"
                        android:layout_width="260px"
                        android:layout_height="130px"
                        android:text="CHOOSE LOGO 1"
                        android:textSize="10sp"
                        android:backgroundTint="@color/cardview_dark_background"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="50dp"
                    android:gravity="center">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/insertclubname2"
                        android:hint="Club 2 Name"
                        android:textColorHint="@color/black"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:gravity="center"/>
                    <ImageView
                        android:id="@+id/insertlogo2"
                        android:layout_width="300px"
                        android:layout_height="300px"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ic_launcher_background"/>
                    <Button
                        android:id="@+id/insertbtnchooseimage2"
                        android:layout_width="260px"
                        android:layout_height="130px"
                        android:text="CHOOSE LOGO 2"
                        android:textSize="10sp"
                        android:backgroundTint="@color/cardview_dark_background"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:id="@+id/inserttanggal"
                    android:hint="Tanggal"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:id="@+id/insertwaktu"
                    android:hint="Waktu"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:id="@+id/insertdeskripsi"
                    android:hint="Deskripsi"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center|top"/>
            </LinearLayout>
            <Button
                android:id="@+id/btnupdate"
                android:layout_width="110dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:text="UPDATE"
                android:backgroundTint="@color/cardview_dark_background"/>
            <Button
                android:id="@+id/btndelete"
                android:layout_width="110dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:text="DELETE"
                android:backgroundTint="@color/cardview_dark_background"/>
            <Button
                android:id="@+id/btncancel"
                android:layout_width="110dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:text="CANCEL"
                android:backgroundTint="@color/cardview_dark_background"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>